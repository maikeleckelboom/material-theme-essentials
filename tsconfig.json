{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "types": ["vitest/globals", "@vitest/browser/providers/playwright"],
    "exclude": ["**/*.test.ts", "dist", "node_modules"]
  },
  "include": ["src"]
}
